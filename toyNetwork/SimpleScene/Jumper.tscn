script/source = "extends KinematicBody2D

export var gravity:Vector2 = Vector2(0,1000)
export var runSpeed:float = 250
export var jumpSpeed:float = 750

var currentSpeed:Vector2= Vector2.ZERO


export var isCurrentPlayer = false

func _ready():
	if isCurrentPlayer:
		get_parent().jumper = self
		
	$CenterContainer/Label.text = String(get_network_master())

func _physics_process(delta):
	if isCurrentPlayer == false:
		return
	
	
	var jump:bool = false
	var leftRight:float = 0
	if Input.is_action_pressed(\"left\"):
		leftRight -= 1
	if Input.is_action_pressed(\"right\"):
		leftRight += 1
	if Input.is_action_pressed(\"jump\"):
		jump = true
	
	currentSpeed.x = leftRight*runSpeed
	currentSpeed += gravity * delta
	if is_on_floor() and jump:
		currentSpeed.y = -jumpSpeed
		
	
	
	currentSpeed = move_and_slide(currentSpeed,Vector2.UP)


	updateNetwork()


func updateNetwork():
	if get_tree().has_network_peer() == false or get_tree().network_peer.get_connection_status() != NetworkedMultiplayerPeer.CONNECTION_CONNECTED:
		return
	rpc_unreliable(\"movePlayer\",global_transform.origin)
	
	
remote func movePlayer(position):
	global_transform.origin = position


func _on_Jumper_renamed():
	pass # Replace with function body.
"

